% DOCUMENT CONFIGURATION

% Custom colour
\definecolor{MillennialBlue}{RGB}{2,93,140}

% Hyperlink config
\hypersetup{%
    colorlinks = true,
    breaklinks = true,
    linkcolor  = MillennialBlue,
    citecolor  = black,
    filecolor  = black,
    urlcolor   = MillennialBlue
}

% Custom \section command
\RedeclareSectionCommand[afterskip=0.5em,font=\normalfont\bfseries]{section}

% Horizontal line under each section title
\renewcommand{\sectionlinesformat}[4]{%
    \Ifstr{#1}{section}{%
        \parbox[t]{\linewidth}{%
            \raggedsection\@hangfrom{\hskip #2#3}{#4}\par
            \kern-1\ht\strutbox\rule{\linewidth}{0.5pt}
        }%
    }{%
        \@hangfrom{\hskip #2#3}{#4}
    }
}

% Empty central position of footer
\cfoot{}
% Print the headers and footers on all pages
\pagestyle{scrheadings}
% Remove the default paragraph indentation
\setlength{\parindent}{0pt}
% Better looking spacing after periods
\frenchspacing

