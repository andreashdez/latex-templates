% Custom \section command
\RedeclareSectionCommand[afterskip=.5em,font=\normalfont\bfseries]{section}

% Horizontal line under each section title
\renewcommand{\sectionlinesformat}[4]{%
    \ifstr{#1}{section}{%
        \parbox[t]{\linewidth}{%
            \raggedsection\@hangfrom{\hskip #2#3}{#4}\par
            \kern-1\ht\strutbox\rule{\linewidth}{.5pt}
        }%
    }{%
    \@hangfrom{\hskip #2#3}{#4}}
}

