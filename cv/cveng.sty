% MACROS

\newcommand{\sepspace}{\vspace*{2em}}

\newcommand{\cvtitle}[6]{%
    \begin{center}
        \huge #1\par
        \itshape \normalsize #2 {\large\textperiodcentered} #3 {\large\textperiodcentered} #4\par
        {\Letter} #5 \ {\Telefon} #6
    \end{center}
    \sepspace{}
}

\newcommand{\ExperienceEntry}[4]{%
    \textbf{#1} \hfill          % Name
    \textbf{#2} \par            % Date
    \textit{#3} \par            % Institution
    \vspace{0.5em}
    \begingroup
    \leftskip2em
    \rightskip\leftskip
    \small #4                   % Description
    \normalsize \par
    \endgroup
}
