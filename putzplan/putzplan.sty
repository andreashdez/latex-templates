\def\tennant#1#2{
	\node [anchor=base west, transform canvas={xshift=0.8pc,yshift=0.0pc}] at (cal-#1.base east) {#2};
	\draw [thick, transform canvas={xshift=0.8pc,yshift=-0.5pc}] (cal-#1.base east)--+(16.5pc,0);
}

\def\calendaryear#1#2#3{
	\calendar [
		dates=#1-#2-01 to #1-#3-last,
		name=cal,
		week list,
		day yshift={2.0pc},
		month yshift={1.3pc},
		month label left vertical,
		month text=\textcolor{lightgray}{\%mt},
		black
	]
		if (weekend) [lightgray];
}

